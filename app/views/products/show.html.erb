<p id="notice"><%= notice %></p>

<p>
  <strong>Product category:</strong>
  <%= @product.product_category.name if @product.product_category %>
</p>

<p>
  <strong>Sku:</strong>
  <%= @product.sku %>
</p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <% if @product.img.url %>
      <%= image_tag @product.img, :class => "img-thumbnail" %>
  <% end %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
